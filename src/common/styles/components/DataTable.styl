.DataTableHeader
  .DataTableRow
    cursor: default

.DataTableHeaderColumn, .DataTableRowColumn
  &.actions
    width: 90px

  &.icon
    width: 96px

.DataTableRow
  position: relative
  cursor: pointer

  .placeholder
    position: relative
    top: 0
    left: 0
    overflow: hidden
    padding: 1em 0
    width: 100%
    height: 100%
    background-color: $grey-10
    content: ''

    &:after
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: shade($grey-10, 2%)
      content: ''
      animation: DataTableRowEmpty-animation 2s infinite linear

@keyframes DataTableRowEmpty-animation
  0%
    transform: translate3d(-100%, 0, 0)
  100%
    transform: translate3d(200%, 0, 0)

